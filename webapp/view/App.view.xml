<mvc:View controllerName="openui5.movies.controller.App" 
	xmlns:mvc="sap.ui.core.mvc" displayBlock="true" 
	xmlns="sap.m">
	<Shell id="shell">
		<App id="app">
			<pages>
				<Page id="page" title="{i18n>title}">
					<content>
						<Image src="images/MoviesHeader.png" width = "100%" tooltip="Movie illustration" densityAware="false" decorative="false" press="onImagePress"/>
					</content>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>